{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "ES2015",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/main.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "docs"],
  
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"

  
}