{
    "compilerOptions": {
      "outDir": "dist",
      "target": "ES2015",
      "module": "commonjs",
      "strict": true,
      "watch": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "docs"],
    
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }